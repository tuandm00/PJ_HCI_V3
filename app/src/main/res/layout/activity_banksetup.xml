<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/topbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCF97700"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView59"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Liên Kết Ngân Hàng"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbank"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Vui lòng chọn ngân hàng liên kết"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <!--        Line 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/line_bank"
            android:orientation="horizontal"
            tools:ignore="InvalidId">

            <TextView
                android:id="@+id/textView58"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="Ngân hàng"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnchonNganHang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:text="." />
        </LinearLayout>
        <!--        Line 2-->
        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Số thẻ (Seri)"
            android:paddingLeft="10dp"
            android:textColorHint="#DFD5D5"
            android:textColor="@color/black"
            android:background="@drawable/line_bank"/>
        <!--        Line 3-->
        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tên Chủ Thẻ"
            android:paddingLeft="10dp"
            android:textColorHint="#DFD5D5"
            android:textColor="@color/black"
            android:background="@drawable/line_bank"/>
        <!--        Line 4-->
        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="CMND / CCCD / Hộ chiếu chủ thẻ"
            android:paddingLeft="10dp"
            android:textColorHint="#DFD5D5"
            android:textColor="@color/black"
            android:background="@drawable/line_bank"/>
        <!--        Line 5-->
        <EditText
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Mật khẩu thẻ (4 - 6 số)"
            android:paddingLeft="10dp"
            android:textColorHint="#DFD5D5"
            android:textColor="@color/black"
            android:background="@drawable/line_bank"/>

        <TextView
            android:id="@+id/textView61"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Là mật khẩu dùng để rút tiền tại cây ATM của thẻ"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buttonLienKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="LIÊN KẾT THẺ ATM"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/line_bank"
            android:backgroundTint="#CCF97700"/>


    </LinearLayout>

</RelativeLayout>