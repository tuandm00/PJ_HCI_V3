<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home_Page">

    <TextView
        android:id="@+id/txtSelectYourServices"
        android:layout_width="270dp"
        android:layout_height="119dp"
        android:layout_marginTop="76dp"
        android:text="Select your services..."
        android:textColor="#EB7828"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLightMode"
        android:layout_width="72dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lightmode" />


    <ImageView
        android:id="@+id/imgHalfCircle"
        android:layout_width="122dp"
        android:layout_height="413dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="352dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_circle" />

    <ImageView
        android:id="@+id/imgFullCircle"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="556dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_circle_full" />

    <Button
        android:id="@+id/btnFreelanceJob"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#A768FA"
        android:gravity="center_vertical"
        android:text="Freelance Job"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLostFound"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnLostFound"
        app:layout_constraintTop_toBottomOf="@+id/btnLostFound" />

    <Button
        android:id="@+id/btnLostFound"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#4075FF"
        android:gravity="center_vertical"
        android:text="Lost &amp; Found"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLostAndFound"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectYourServices" />

    <ImageView
        android:id="@+id/imgLostAndFound"
        android:layout_width="84dp"
        android:layout_height="78dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectYourServices"
        app:srcCompat="@drawable/lostandfound" />

    <ImageView
        android:id="@+id/imgFreelanceJob"
        android:layout_width="90dp"
        android:layout_height="148dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFreelanceJob"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLostAndFound"
        app:srcCompat="@drawable/parttime" />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />


</androidx.constraintlayout.widget.ConstraintLayout>