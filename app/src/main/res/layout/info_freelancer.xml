<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#C8C7C7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_recycle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_medium_1"
            android:background="@drawable/item_recycle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTieude"
                android:layout_width="188dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:text="Tieu de"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGia"
                android:layout_width="188dp"
                android:layout_height="43dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:text="Gia tien"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNoidung"
                android:layout_width="186dp"
                android:layout_height="89dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:text="Noi dung"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_medium_1"
            android:background="@drawable/item_recycle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNguoituyendung"
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Nguoi tuyen dung"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDiadiem"
                android:layout_width="144dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Dia diem"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewKynang"
                android:layout_width="147dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Ky nang"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNgaydang"
                android:layout_width="145dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Ngay dang"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>